# Ambiente: development | test | production
NODE_ENV=development

# Porta do servidor
PORT=4000

# JWT (use um segredo forte em produção)
JWT_SECRET=dev-secret-change-me-please-32chars

# MongoDB (ajuste conforme seu ambiente)
MONGODB_URI=mongodb://localhost:27017/runx

# Rate limiting
RATE_LIMIT_MAX=200
RATE_LIMIT_TIME_WINDOW_MS=60000
 
# Habilitar DB (false para desenvolvimento rápido sem Mongo)
ENABLE_DB=false
