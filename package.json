{
  "name": "runx-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "turbo": "^2.1.3"
  },
  "pnpm": {
    "packageExtensions": {
      "react-native@*": {
        "peerDependencies": {
          "react": "*",
          "react-native": "*"
        }
      }
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
