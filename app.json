{
  "expo": {
    "name": "Pulse",
    "slug": "pulse",
    "scheme": "pulse",
    "deeplinks": [
      "pulse://",
      "https://pulse.app"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#262626"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Usamos sua localização para rastrear suas corridas.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Permita localização em segundo plano para manter o rastreamento enquanto a tela está bloqueada.",
        "UIBackgroundModes": [
          "location"
        ],
        "NSPhotoLibraryUsageDescription": "Precisamos acessar sua galeria para foto de perfil."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#262626"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ],
      "notification": {
        "icon": "./assets/notification-icon.png",
        "color": "#FF7E47",
        "channelId": "run-tracking"
      },
      "package": "com.anonymous.runmaster"
    },
    "plugins": [
      "expo-location",
      "expo-task-manager",
      "expo-notifications",
      "expo-image-picker"
    ]
  }
}
